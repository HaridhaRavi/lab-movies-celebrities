<h2>Update Movie</h2>
<form action="/movies/{{moviesInfo._id}}/edit" method="POST">
   <label>Movie Name:
        <input type="text" name="title" value="{{moviesInfo.title}}"/>
    </label>
    <br />
    <label>Genre:
        <input type="text" name="genre" value="{{moviesInfo.genre}}"/>
    </label>
    <br />
    <label>Plot:
        <input type="text" name="plot" value="{{moviesInfo.plot}}"/>
    </label>
    <br />
    <label>cast:
    <select name="cast" multiple>
        {{#each allCelebrities}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    </label>
    <br />
    <button type="submit">Update</button>
</form>